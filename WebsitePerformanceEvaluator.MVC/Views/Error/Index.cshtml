@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Error";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Error</h3>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <h1 class="display-1 text-muted mb-5"><i class="fas fa-exclamation-triangle"></i></h1>
                        <h2 class="text-danger">Oops! Something went wrong.</h2>
                        <p class="lead">We are sorry, but something went wrong. Please try again later.</p>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>
