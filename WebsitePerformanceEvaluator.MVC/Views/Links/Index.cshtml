@model WebsitePerformanceEvaluator.MVC.ViewModels.LinkViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Links</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h1>Links</h1>
        <form method="post" action="@Url.Action("GetLinksFromUrl")">
            <div class="form-group">
                <label for="url">Enter a URL:</label>
                <input type="text" class="form-control" name="url" id="url" required>
            </div>
            <button type="submit" class="btn btn-primary">Crawl</button>
        </form>

        @if (Model != null && Model.Links.Any())
        {
            <table class="table">
                <thead>
                <tr>
                    <th>URL</th>
                    <th>Date</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var link in Model.Links)
                {
                    <tr>
                        <td>@link.Url</td>
                        <td>@link.CreatedAt</td>
                        <td><a href="@Url.Action("LinkPerformance", new { linkId = link.Id, url = link.Url })" class="btn btn-secondary">View Details</a></td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>No links found.</p>
        }
    </div>
</body>
</html>